<div class="contact-us">

    {{#if sending}}
        <img src="assets/images/orange-spinner.gif">
    {{else}}
        <div class="message-box">
            {{input type="email" value=email placeholder="email"}}
            {{textarea value=message placeholder="message"}}

            {{#if readyToSend}}
                <a {{action "send"}}>send</a>
            {{else}}
                <span class="disabled-send-button">send</span>
            {{/if}}
        </div>
    {{/if}}
</div>
